#VPS settings
hostname add.your.domain

#BASIC INSTALL COMPONENTS AND PROGRAMS
sudo apt install screen && sudo apt install wget
sudo apt install ranger && sudo apt install htop
sudo apt install docker.io && sudo apt install docker-compose
yes | sudo apt install fish	#sudo apt install fish --yes https://fishshell.com/docs/3.0/tutorial.html

#Essential security measures:
- use regular user
- enable firewall
- add SSH key
